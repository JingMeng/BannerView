<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baimeng.bannerview.MainActivity">
    <com.baimeng.bannerview.banner.BannerView
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:widthProportion="8"
        app:heightProportion="3"
        app:dotSize="8dp"
        app:dotDistance="10dp"
        app:dotGravity="center"
        app:bottomColor="@color/colorAccent"
        app:dotIndicatorFocus="@color/colorPrimaryDark"
        app:dotIndicatorNormal="#ffffff">
    </com.baimeng.bannerview.banner.BannerView>


</LinearLayout>
